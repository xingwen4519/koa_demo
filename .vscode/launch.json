    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "preLaunchTask": "typescript",
            "protocol":"inspector",
            "program": "${workspaceFolder}/src/app.ts",
            "outFiles": [
                "${workspaceFolder}/bin/*.js"
            ],
            "runtimeExecutable": "nodemon", // 或者 node-dev
            "restart": true,
            "console": "integratedTerminal",
        }
    ]
}